<UserControl
	x:Class="EOToolsWeb.Views.EquipmentUpgrades.EquipmentUpgradeCostEditView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:equipmentUpgrades1="clr-namespace:EOToolsWeb.ViewModels.EquipmentUpgrades"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:DataType="equipmentUpgrades1:EquipmentUpgradeImprovmentCostDetailViewModel"
	mc:Ignorable="d">

	<StackPanel>
		<Button
			Margin="5"
			Command="{Binding AddEquipmentRequirementCommand}"
			Content="Add" />

		<DataGrid AutoGenerateColumns="False" Height="100" HorizontalScrollBarVisibility="Auto" ItemsSource="{Binding EquipmentsRequired}">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Equipment">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel>
								<Button Command="{Binding OpenEquipmentPickerCommand}" Content="{Binding Equipment.NameEN}" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTextColumn
					Binding="{Binding Count}"
					Header="Count required"
					IsReadOnly="False" />
			</DataGrid.Columns>
		</DataGrid>

		<Button
			Margin="5"
			Command="{Binding AddUseItemRequirementCommand}"
			Content="Add" />

		<DataGrid AutoGenerateColumns="False" Height="100" HorizontalScrollBarVisibility="Auto" ItemsSource="{Binding UseItemsRequired}">
			<DataGrid.Columns>
				
				<DataGridTemplateColumn Header="Consumable">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel>
								<Button Command="{Binding OpenEquipmentPickerCommand}" Content="{Binding Item.NameEN}" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTextColumn
					Binding="{Binding Count}"
					Header="Count required"
					IsReadOnly="False" />
			</DataGrid.Columns>
		</DataGrid>
	</StackPanel>
</UserControl>
