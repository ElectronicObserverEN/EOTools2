<UserControl
	x:Class="EOToolsWeb.Views.Updates.UpdateManagerView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="EOToolsWeb.Views.Updates"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:EOToolsWeb.ViewModels.Updates"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:DataType="vm:UpdateManagerViewModel"
	mc:Ignorable="d">
	<Design.DataContext>
		<!--
			This only sets the DataContext for the previewer in an IDE,
			to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
		-->
		<vm:UpdateManagerViewModel />
	</Design.DataContext>

	<StackPanel>
		<StackPanel Margin="5" Orientation="Horizontal">
			<Button Command="{Binding AddUpdateCommand}" Content="Add" />
		</StackPanel>

		<ListBox Margin="5" ItemsSource="{Binding UpdateListSorted}" />
	</StackPanel>
</UserControl>
